@model Spookyrequest
<div class="text-center">
    <h1 class="display-4">Welcome to Spooky Request Logic App</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<form method="post" enctype="multipart/form-data">
    <p>Enter your Details to aplly today</p>

    <div class="row py-1">
        <div class="col-3">
            Name:
        </div>
        <div class="col-6">
            <input asp-for="Name"  class="form-control" />
        </div>
    </div>



    <div class="row py-1">
        <div class="col-3">
            Email:
        </div>
        <div class="col-6">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>



    <div class="row py-1">
        <div class="col-3">
            PhoneNo:
        </div>
        <div class="col-6">
            <input asp-for="Phone" class="form-control" />
        </div>
    </div>




    <div class="row py-1">
        <div class="col-3">
            HeadShot/Resume
        </div>
        <div class="col-6">
            <input type="file" class="form-control pt-1" name="file" />
        </div>
    </div>


    <div class="row">
        <div class="col-3">
        
        </div>
        <div class="col-6">
            <button type="Submit"class="btn btn-success" >Apply</button>
        </div>
    </div>



    </form>